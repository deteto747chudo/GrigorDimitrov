@model GrigorDimitrov.Models.GrigorModel
@{
    ViewBag.Title = Model.Title;
    Layout = null;
}
<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="utf-8" />
    <title>@Model.Title</title>
    <style>
        body {
            background-color: #121212;
            color: #e0e0e0;
            font-family: 'Segoe UI', sans-serif;
            margin: 0;
        }

        header {
            background-image: url('@Model.GalleryImages[0]');
            background-size: cover;
            background-position: center;
            height: 400px;
        }

        .content {
            padding: 40px;
            text-align: center;
        }

        h1 {
            color: #fff;
            font-size: 36px;
        }

        p {
            font-size: 18px;
            color: #ccc;
        }

        .gallery {
            margin-top: 40px;
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 15px;
        }

            .gallery img {
                width: 300px;
                height: 200px;
                object-fit: cover;
                border: 3px solid #333;
                border-radius: 10px;
                transition: 0.3s;
                cursor: pointer;
            }

                .gallery img:hover {
                    transform: scale(1.05);
                    border-color: #00ffcc;
                }

        .lightbox {
            display: none;
            position: fixed;
            z-index: 9999;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.8);
            justify-content: center;
            align-items: center;
        }

            .lightbox img {
                max-width: 90%;
                max-height: 90%;
                border: 4px solid white;
                border-radius: 10px;
            }

            .lightbox:target {
                display: flex;
            }

        .close-lightbox {
            position: absolute;
            top: 30px;
            right: 40px;
            font-size: 40px;
            color: white;
            text-decoration: none;
        }

        footer {
            margin-top: 50px;
            padding: 20px;
            background: #1f1f1f;
            text-align: center;
            color: #aaa;
        }
    </style>
</head>
<body>
    <header></header>
    <div class="content">
        <h1>@Model.Title</h1>
        <p>@Model.Description</p>
        <div class="gallery">
            @for (int i = 0; i < Model.GalleryImages.Count; i++)
            {
                <a href="#img@i"><img src="@Model.GalleryImages[i]" alt="Grigor Dimitrov photo" /></a>
            }
        </div>
        @for (int i = 0; i < Model.GalleryImages.Count; i++)
        {
            <div class="lightbox" id="img@i">
                <a href="#" class="close-lightbox">&times;</a>
                <img src="@Model.GalleryImages[i]" alt="Grigor Dimitrov enlarge" />
            </div>
        }
    </div>
    <footer>© @DateTime.Now.Year Grigor Dimitrov Fan Page</footer>
</body>
</html>
